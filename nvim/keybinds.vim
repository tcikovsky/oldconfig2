" open netrw file tree
nmap <C-b> :Lex<RETURN>:vertical resize 30<RETURN>

" map add empty line to top and bottom
nmap <RETURN><RETURN> o<ESC>
nmap <BS><BS> O<ESC>

" save file with ctrl-s
nmap <c-s> :w<RETURN>

"close file with ctrl-q
nmap <c-q> :q<RETURN>

" open fzf :Files
nmap <c-p> :Files<RETURN>
